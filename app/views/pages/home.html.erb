<h3>News</h3>

<center>

	<!-- https://www.devroom.io/2007/01/12/rails-group-results-by-week-using-group_by/ -->
	<!-- @showcasedgames.group_by(&:stage).sort.each do |stage, games| -->

	<% @gamehistory.each do |journey| %>	
		<b>Stage <%= journey[:stage] %></b>
		<br>

		<% journey[:games].each do |game| %>

			<% if game[1][:status] == "completed" %>
				<%= game[1][:hometeam] %>
				<%= game[1][:scorehome] %>
				<%= game[1][:scoreaway] %>
				<%= game[1][:awayteam] %>
				<% game[1][:hometeamevents].each do |event| %>
					<br><small style="color:grey"><%= event.player.last_name %>
					<%= event.minute %>' </small>
				<% end %>
				<% game[1][:awayteamevents].each do |event| %>
					<br><small style="color:grey"><%= event.minute %>' 
					<%= event.player.last_name %></small>
				<% end %>
			<% else %>
				<small><%= ((game[1][:homewinrate]).to_f*100).round(2) %>%</small>
				<%= game[1][:hometeam] %>
				<small><b>
					<%= game[1][:date] %>
					<%= game[1][:time] %>
				</b></small>
				<%= game[1][:awayteam] %>
				<small><%= ((game[1][:awaywinrate]).to_f*100).round(2) %>%</small>
			<% end %>

			<br>

		<% end %>
	<br>
	<% end %>


</center>

<% for i in @theranking do %>
	<%= i[0] %>
	<small>(<%= i[1] %>)</small>
	<br>
<% end %>
<h1>Home page</h1>

<center>
	<% @games.each do |game| %>
		<% if game[0] == "incomplete" %>
			<%= link_to fixture_path(game[7]), {class: "classname"} do %>
				<small>(<%= (game[1]*100).round(2) %>%)</small>
				<%= game[5] %>
				<small>
					<%= game[3] %>
					<%= game[4] %>
				</small>
				<%= game[6] %>
				<small>(<%= (game[2]*100).round(2) %>%)</small>
			<% end %>
		<% else %>
			<%= link_to fixture_path(game[5]), {class: "classname"} do %>
				<%= game[3] %>
				<%= game[1] %>
				 -
				<%= game[2] %>
				<%= game[4] %>
			<% end %>
		<% end %>
		<br>
	<% end %>
</center>

<% for i in @theranking do %>
	<%= i[0] %>
	<small>(<%= i[1] %>)</small>
	<br>
<% end %>
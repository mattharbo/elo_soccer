<h1>Home page</h1>

<center>
	<% @games.each do |game| %>
		<% if game[0] == "incomplete" %>
			<%= link_to fixture_path(game[7]), {class: "classname"} do %>
				<small>(<%= (game[1]*100).round(2) %>%)</small>
				<%= game[5] %>
				<small>
					<%= game[3] %>
					<%= game[4] %>
				</small>
				<%= game[6] %>
				<small>(<%= (game[2]*100).round(2) %>%)</small>
			<% end %>
		<% else %>
			<%= link_to fixture_path(game[5]), {class: "classname"} do %>
				<%= game[5] %>
				<%= game[1] %>
				 -
				<%= game[2] %>
				<%= game[6] %>
			<% end %>
				<table>
					<tr>
						<td>
							<% game[3].each do |hevent| %>
								<%= hevent.player.last_name %>
								<%= hevent.minute %>' <br>
							<% end %>
						</td>
						<td>
							<% game[4].each do |aevent| %>
								<%= aevent.minute %>'
								<%= aevent.player.last_name %> <br>
							<% end %>
						</td>
					</tr>
				</table>
		<% end %>
		<br>
	<% end %>
</center>

<% for i in @theranking do %>
	<%= i[0] %>
	<small>(<%= i[1] %>)</small>
	<br>
<% end %>